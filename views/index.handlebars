<img src="/assets/img/burger.png" alt="Burger" width="240 px">
<h1>Burgers!</h1>

<div class="container">
  <div class="row">

    <div class="col">
      <h4>Burgers that are not devoured!</h4>
      <ul class="list-group">
        {{#each burgers}}
        {{#unless devoured}}
        <li class="list-group-item list-group-item-success"> {{ burger_name }}<button class="devoured btn btn-success"
            data-id="{{id}}">Click</button></li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col">
      <h4>Burgers that are devoured!</h4>
      <ul class="list-group">
        {{#each burgers}}
        {{#if devoured}}
        <li class="list-group-item list-group-item-warning"><strong>{{ burger_name}}</strong></li>
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
</div>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button class="btn btn-warning btn-lg btn-block" type="submit">Add Burger</button>
</form>